mixin MAPassRecovery(props)
	//- # ПОДКЛЮЧЕНИЕ ДЛЯ ПРОВЕРОК DATA, OPT, ELEM # -//
	include ../../../../shared/helpers/pug/shortcut-check-store

	//- # ПОЛУЧЕНИЕ CSS КЛАССОВ КОМПОНЕНТА # -//
	include MAPassRecovery.cn.pug
	- const styles = classes(props && props.cn);

	//- # ВЕРСТКА КОМПОНЕНТА # -//
	div(class=styles.block)&attributes(attributes)
		+Button({data: {icon: 'arrow-left'}, opt: {isCircle: true}})&attributes({Button: {class: styles.elementBtnBack, "aria-label": "Вернуться назад"}})
		+Heading(ELEM('Heading'))(class=styles.elementHeading)
		form(class=styles.elementForm novalidate method="post" action="/auth" data-url-code="/code" data-url-code-resend="/auth")
			div(class=styles.elementFormContent)
				+Input(ELEM('InputPhoneEmail'))(class=styles.elementInput)
				+Button(ELEM('Button'))&attributes({Button: {class: styles.elementButton}})
		+Button(ELEM('ButtonSignUp'))&attributes({Button: {class: [styles.elementButton, 'js-signup']}})
		+Button(ELEM('ButtonLogin'))&attributes({Button: {class: [styles.elementButton, 'js-login']}})
		+Text(ELEM('TextCaption'))(class=styles.elementCaption)
