mixin MainBanners(props)
	//- # ПОДКЛЮЧЕНИЕ ДЛЯ ПРОВЕРОК DATA, OPT, ELEM # -//
	include ../../shared/helpers/pug/shortcut-check-store

	//- # ПОЛУЧЕНИЕ CSS КЛАССОВ КОМПОНЕНТА # -//
	include MainBanners.cn.pug
	- const styles = classes(props && props.cn);

	//- # ВЕРСТКА КОМПОНЕНТА # -//
	section(class=styles.block)
		+Row
			+Col({cn: {cols: 'col-10 col-6@md col-2@xs'}})
				+CardMedium(ELEM('CardMedium'))
			+Col({cn: {cols: 'col-10 col-6@md col-2@xs'}})
				+BannerVideo(ELEM('BannerVideo'))
